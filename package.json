{
  "name": "erp-system",
  "version": "1.0.0",
  "description": "ERP System with Backend and Frontend",
  "private": true,
  "scripts": {
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "build:frontend": "cd frontend && npm run build",
    "start:backend": "cd backend && npm start",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "pm2:install": "npm install -g pm2",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:start:prod": "pm2 start ecosystem.config.js --env production",
    "pm2:start:backend": "pm2 start ecosystem.config.js --only erp-backend",
    "pm2:start:frontend": "npm run build:frontend && pm2 start ecosystem.config.js --only erp-frontend",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:stop:backend": "pm2 stop erp-backend",
    "pm2:stop:frontend": "pm2 stop erp-frontend",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:restart:backend": "pm2 restart erp-backend",
    "pm2:restart:frontend": "pm2 restart erp-frontend",
    "pm2:reload": "pm2 reload ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "pm2:logs:backend": "pm2 logs erp-backend",
    "pm2:logs:frontend": "pm2 logs erp-frontend",
    "pm2:monit": "pm2 monit",
    "pm2:status": "pm2 status",
    "pm2:save": "pm2 save",
    "pm2:resurrect": "pm2 resurrect",
    "pm2:startup": "pm2 startup",
    "pm2:kill": "pm2 kill"
  },
  "keywords": [
    "erp",
    "pm2",
    "nodejs",
    "react",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "pm2": "^5.3.0"
  }
}

